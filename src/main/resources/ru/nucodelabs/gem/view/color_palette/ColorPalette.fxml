<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="-Infinity" prefWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.nucodelabs.gem.view.color_palette.ColorPaletteController">
    <VBox alignment="CENTER">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <HBox VBox.vgrow="ALWAYS">
            <Canvas fx:id="palette" height="-Infinity" width="-Infinity" />
            <Label text="placeholder_text" />
        </HBox>
        <VBox VBox.vgrow="NEVER">
            <VBox VBox.vgrow="ALWAYS">
                <Label text="%paletteMinRes" />
                <TextField fx:id="minResistanceTF" onKeyTyped="#onMinResistanceEdit" />
            </VBox>
            <VBox VBox.vgrow="ALWAYS">
                <Label text="%paletteMaxRes" />
                <TextField fx:id="maxResistanceTF" onKeyTyped="#onMaxResistanceEdit" />
            </VBox>
        </VBox>
    </VBox>

</HBox>
