<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<?import ru.nucodelabs.gem.view.control.chart.*?>
<Stage xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="ru.nucodelabs.gem.view.controller.main.AnisotropyMainViewController"
       title="Тестовые данные - GEM#Anisotropy">
    <scene>
        <Scene stylesheets="@../../common.css../chartsrts/MapPseudoSection.css">
            <VBox fx:id="root" style="-fx-padding: 20;">
                <HBox spacing="10">
                    <VBox spacing="10">
                        <ImageScatterChart fx:id="satChart" legendVisible="false">
                            <xAxis>
                                <NucodeNumberAxis autoRanging="false"/>
                            </xAxis>
                            <yAxis>
                                <NucodeNumberAxis autoRanging="false"/>
                            </yAxis>
                        </ImageScatterChart>
                        <Label text="Масштаб"/>
                        <TextField fx:id="scaleTf" promptText="Масштаб" maxWidth="100"/>
                        <Button text="Применить" onAction="#applyScale" maxWidth="100"/>
                    </VBox>
                    <SmartInterpolationMap fx:id="interpolChart" legendVisible="false" prefWidth="500" minWidth="500"
                                           maxWidth="500" prefHeight="500" maxHeight="500" minHeight="500">
                        <xAxis>
                            <NucodeNumberAxis autoRanging="true" inverted="false"/>
                        </xAxis>
                        <yAxis>
                            <NucodeNumberAxis autoRanging="true" inverted="false"/>
                        </yAxis>
                    </SmartInterpolationMap>
                </HBox>
            </VBox>
        </Scene>
    </scene>
</Stage>
