<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox fx:id="root" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="400.0" prefWidth="600.0"
      stylesheets="@../common.css, @NoFileScreen.css" style="-fx-background-color: white"
      fx:controller="ru.nucodelabs.gem.view.main.NoFileScreenController"
      onDragOver="#dragOverHandle" onDragDropped="#dragDropHandle">

    <HBox maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS" alignment="CENTER_LEFT">
        <VBox HBox.hgrow="ALWAYS" style="-fx-padding: 20">
            <Label text="%recentFiles" style="-fx-font-size: 22pt;"/>
            <ListView fx:id="recentFiles" maxWidth="Infinity" VBox.vgrow="ALWAYS"/>
        </VBox>
        <VBox alignment="CENTER" maxWidth="Infinity" maxHeight="Infinity">
            <ImageView fitHeight="100" fitWidth="100">
                <Image url="/img/gem.png"/>
            </ImageView>
            <Label style="-fx-text-fill: DarkGray" text="%version"/>
            <Label VBox.vgrow="ALWAYS"
                   style="-fx-font-weight: bold; -fx-font-size: 22pt;" text="%noFileTitle"/>
            <HBox styleClass="textContainer">
                <Label text="%noFileText"/>
            </HBox>
            <Button text="%openSection" defaultButton="true" onAction="#openSection"/>
            <HBox maxHeight="10" prefHeight="10"/>
            <Button text="%openEXPFile" onAction="#importEXP"/>
            <HBox styleClass="textContainer" alignment="BASELINE_CENTER">
                <Label text="%drag"/>
            </HBox>
        </VBox>
    </HBox>


</VBox>
