<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<fx:root alignment="TOP_CENTER" prefHeight="150" prefWidth="500" type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../common.css">
    <AnchorPane VBox.vgrow="ALWAYS">
        <Label AnchorPane.topAnchor="25" AnchorPane.leftAnchor="25" text="%askImportOption"/>
    </AnchorPane>
    <AnchorPane VBox.vgrow="ALWAYS">
        <HBox alignment="BOTTOM_RIGHT" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20">
            <HBox style="-fx-padding: 5">
                <Button styleClass="default-btn" defaultButton="true" fx:id="addToCurrentBtn" text="%addToCurrent"/>
            </HBox>
            <HBox style="-fx-padding: 5">
                <Button fx:id="addToNewBtn" text="%addToNew"/>
            </HBox>
            <HBox style="-fx-padding: 5">
                <Button fx:id="cancelBtn" text="%cancel"/>
            </HBox>
        </HBox>
    </AnchorPane>

</fx:root>
