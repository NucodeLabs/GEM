<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<fx:root alignment="CENTER" prefHeight="150" prefWidth="400" type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="@../common.css">
    <Text text="Добавить пикет к текущему разрезу или создать новый?">
        <VBox.margin>
            <Insets bottom="30.0"/>
        </VBox.margin>
    </Text>
    <HBox alignment="CENTER">
        <Button fx:id="addToCurrentBtn" text="Добавить к текущему">
            <HBox.margin>
                <Insets right="30.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="addToNewBtn" text="Новый разрез"/>
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </HBox>
</fx:root>
