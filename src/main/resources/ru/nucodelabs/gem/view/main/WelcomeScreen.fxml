<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         prefHeight="400.0" prefWidth="600.0"
         stylesheets="@../common.css, @WelcomeScreen.css" style="-fx-background-color: white">

    <HBox maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS" alignment="CENTER">
        <VBox alignment="CENTER" maxWidth="Infinity" maxHeight="Infinity">
            <ImageView fitHeight="100" fitWidth="100">
                <Image url="/img/gem.png"/>
            </ImageView>
            <Label style="-fx-text-fill: DarkGray" text="%version"/>
            <Label VBox.vgrow="ALWAYS"
                   style="-fx-font-weight: bold; -fx-font-size: 22pt;" text="%welcomeToGem"/>
            <HBox fx:id="textContainer">
                <Text text="%welcomeText"/>
            </HBox>
            <HBox fx:id="openEXPButtonContainer">
                <Button defaultButton="true" styleClass="default-btn" fx:id="openEXPButton" text="%openEXPFile"/>
            </HBox>
        </VBox>
    </HBox>


</fx:root>
